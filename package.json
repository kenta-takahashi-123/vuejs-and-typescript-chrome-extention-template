    "npm-run-all": "^4.1.5",
    "sass": "^1.22.12",
    "sass-loader": "^8.0.0",
    "ts-loader": "^6.1.0",
    "typescript": "^3.6.3",
    "url-loader": "^2.1.0",
    "vue-loader": "^15.7.1",
    "vue-template-compiler": "^2.6.10",
