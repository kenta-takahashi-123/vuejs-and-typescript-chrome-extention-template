    "npm-run-all": "^4.1.5",
    "sass": "^1.28.0",
    "sass-loader": "^10.0.4",
    "ts-loader": "^8.0.7",
    "typescript": "^4.0.5",
    "url-loader": "^4.1.1",
    "vue-loader": "^15.9.4",
    "vue-template-compiler": "^2.6.12",
